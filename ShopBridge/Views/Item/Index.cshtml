@model IEnumerable<ShopBridge.Models.Item>
@{
    ViewBag.Title = "Index";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var msg = '@ViewBag.Msg';
        if ('@ViewBag.Msg' != '' && msg.includes("Added"))
            toastr.success('@ViewBag.Msg');
        if ('@ViewBag.Msg' != '' && msg.includes("Updated"))
            toastr.info('@ViewBag.Msg');
        if ('@ViewBag.Msg' != '' && msg.includes("Removed"))
            toastr.error('@ViewBag.Msg');
    });
</script>
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div class="panel">
                <div class="panel-heading custom-header-panel">
                    <h3 class="panel-title roboto">Item List</h3>
                </div>
                <div class="panel-body">
                    <p>
                        @Html.ActionLink("Add New" +
                       "", "CreateNew", null, new { @class = "btn btn-sm btn-success"})
                    </p>
                    <table id="tbl" class="table table-striped table-bordered" style="width:100%">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th>
                                @Html.DisplayName("Actions")
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="font-weight:600">
                                    <a href="~/Item/Details?id=@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @{
                                        if (item.Image != null)
                                        {
                                            string imageBase64 = Convert.ToBase64String(item.Image);
                                            string imageSrc3 = string.Format("data:image/jpg;base64,{0}", imageBase64);
                                            <img src="@imageSrc3" width="50" height="50" />
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Remove", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
